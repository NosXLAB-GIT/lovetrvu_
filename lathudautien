<script>
const openBox=document.getElementById('openBox');
const letterBox=document.getElementById('letterBox');
const audio=document.getElementById('audio');
const musicBtn=document.getElementById('music');
audio.volume=0.7;

function openLetter(){
  openBox.style.display='none';
  letterBox.classList.add('show');
  musicBtn.style.display='flex';
  audio.play().then(()=>musicBtn.classList.add('active'))
  .catch(()=>console.log('Autoplay bá»‹ cháº·n, click Ä‘á»ƒ báº­t nháº¡c.'));
}

musicBtn.addEventListener('click',()=>{
  if(audio.paused){
    audio.play();musicBtn.classList.add('active');
  }else{
    audio.pause();musicBtn.classList.remove('active');
  }
});
</script>
